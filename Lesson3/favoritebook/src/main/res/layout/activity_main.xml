<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/book_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тут появится название вашей любимой книги!"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/open_input_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Открыть экран ввода данных"
        android:layout_below="@id/book_title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>